<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fragmentact.MainActivity" >
    
<!--  <Spinner 
 android:id="@+id/Spinner01" 
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content" 
 android:prompt="@string/spinner_prompt"
/>-->

<TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/category1"
        android:layout_alignParentTop="true"
        android:text="@string/SpinnerPrompt" />

<Button
    android:id="@+id/category1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView1"
    android:layout_marginBottom="20dp"
    android:text="保存したルートファイル" />

<Button
    android:id="@+id/category2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/category1"
    android:layout_below="@+id/category1"
    android:layout_marginBottom="20dp"
    android:text="公共施設コース" />

<Button
    android:id="@+id/category3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/category1"
    android:layout_below="@+id/category2"
    android:layout_marginBottom="20dp"
    android:text="ウォーキングコース" />

<Button
        android:id="@+id/category4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category3"
        android:layout_alignLeft="@+id/category1"
        android:layout_marginBottom="20dp"
        android:text="食べ物コース" />
<Button
        android:id="@+id/category5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category4"
        android:layout_alignLeft="@+id/category1"
        android:layout_marginBottom="20dp"
        android:text="観光コース" />

<Button
    android:id="@+id/category7"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/category5"
    android:layout_marginTop="51dp"
    android:text="その他のコース" />

<Button
    android:id="@+id/category6"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/category4"
    android:layout_marginTop="58dp"
    android:text="便利コース" />

</RelativeLayout>

