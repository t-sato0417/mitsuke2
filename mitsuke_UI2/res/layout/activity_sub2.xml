<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe4c4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fragmentact.MainActivity" >
    
<!--  <Spinner 
 android:id="@+id/Spinner01" 
 android:layout_width="wrap_content" 
 android:layout_height="wrap_content" 
 android:prompt="@string/spinner_prompt"
/>-->

<TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/category1"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:text="@string/category" 
        android:textColor="#3B2C52"/>

<Button
    android:id="@+id/category1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/textView1"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="20dp"
    android:textSize="18sp"
    android:text="保存したルートファイル" />

<Button
    android:id="@+id/category2"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/category1"
    android:layout_below="@+id/category1"
    android:layout_marginBottom="20dp"
    android:textSize="18sp"
    android:text="公共施設ルート" />

<Button
    android:id="@+id/category3"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/category1"
    android:layout_below="@+id/category2"
    android:layout_marginBottom="20dp"
    android:textSize="18sp"
    android:text="ウォーキングルート" />

<Button
        android:id="@+id/category4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category3"
        android:layout_alignLeft="@+id/category1"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:text="食べ物ルート" />
<Button
        android:id="@+id/category5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category4"
        android:layout_alignLeft="@+id/category1"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"
        android:text="観光ルート" />

<Button
    android:id="@+id/category7"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/category6"
   android:layout_marginBottom="20dp"
   android:textSize="18sp"
    android:text="その他のルート" />

<Button
    android:id="@+id/category6"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_below="@+id/category5"
    android:layout_marginBottom="20dp"
    android:textSize="18sp"
    android:text="便利ルート" />

</RelativeLayout>

